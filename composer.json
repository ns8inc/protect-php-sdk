{
    "autoload": {
      "classmap": [
        "src/"
      ]
    },
    "description": "NS8 Protect SDK",
    "license": "MIT",
    "minimum-stability": "stable",
    "name": "ns8/protect-sdk",
    "require": {
        "php": "^7.1.3",
        "zendframework/zend-http": ">=2.8.4 <=2.11",
        "zendframework/zend-json": ">=2.6.1 <=3.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "monolog/monolog": "^1.0"
    },
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "doctrine/coding-standard": "^6.0",
        "rregeer/phpunit-coverage-check": "^0.3.1",
        "ccinn/composer-husky-plugin": "^0.1.0",
        "ccinn/husky-php": "^0.1.0"
    },
    "scripts": {
        "lint": "phpcs --extensions=php src/ tests/",
        "lint-fix": "phpcbf --extensions=php src/ tests/",
        "test": "phpunit tests/",
        "test-coverage": "phpunit --coverage-clover /tmp/coverage.xml --coverage-text tests/ && coverage-check /tmp/coverage.xml 100"
    }
}
